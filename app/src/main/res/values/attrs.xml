        <attr name="rb_progress_width" format="dimension" />
        <attr name="rb_ripple_color" format="color" />
        <attr name="rb_ripple_width" format="dimension" />
        <attr name="rb_record_duration" format="integer" />
        <attr name="rb_record_min_duration" format="integer" />
