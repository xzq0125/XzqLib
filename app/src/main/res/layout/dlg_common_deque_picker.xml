<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:need_target="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffafafa">

        <TextView
            android:id="@+id/dcp_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ff666666"
            android:textSize="14sp" />

        <Button
            android:id="@+id/dcp_btn_determine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:minHeight="35dp"
            android:minWidth="35dp"
            android:text="确定"
            android:textColor="#ff000000"
            android:textSize="14sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <com.xzq.lib.picker.wheelview.wheelpicker.OptionsPicker
            android:id="@+id/dcp_op_options"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            need_target:hasTarget="true"
            need_target:targetText=":" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="至"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <com.xzq.lib.picker.wheelview.wheelpicker.OptionsPicker
            android:id="@+id/dcp_op_options2"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            need_target:hasTarget="true"
            need_target:targetText=":" />
    </LinearLayout>
</LinearLayout>